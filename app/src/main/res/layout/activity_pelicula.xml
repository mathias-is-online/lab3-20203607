<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="726dp"
        android:padding="12dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp">

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="696dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="4dp">

            <TextView
                android:id="@+id/movietitle"
                android:layout_width="410dp"
                android:layout_height="71dp"

                android:background="@color/orange"
                android:text="TITULO PELICULA"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Generos"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/generos"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sourcesans_medium"
                    android:text="Orden del Primo"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"

                    android:layout_height="wrap_content"
                    android:text="Fecha estreno"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/fecha"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sourcesans_medium"
                    android:text="Orden del Primo"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Actores"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/actores"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sourcesans_medium"
                    android:text="Orden del Primo"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Director"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/director"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sourcesans_medium"
                    android:text="Orden del Primo"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Escritores"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/escritores"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/sourcesans_medium"
                    android:text="Orden del Primo"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="387dp"
                android:layout_height="146dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Este es el plot de la pela:" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
